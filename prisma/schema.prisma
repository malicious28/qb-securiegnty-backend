// Example minimal user model for authentication

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or your actual database
  url      = env("DATABASE_URL")
}


model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  country   String?
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt @default(now())
  isVerified Boolean @default(false)
  verificationToken String?
}

model Appointment {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  message   String?
  createdAt DateTime @default(now())
}

model EarlyAccess {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  occupation String?
  createdAt DateTime @default(now())
}
